@model QuanLySach.Models.TinTuc

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="pd-ltr-20 xs-pd-20-10">
    <div class="min-height-200px">
        <div class="page-header">
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <div class="title">
                        <h4>Thêm tin tức</h4>
                    </div>
                    <nav aria-label="breadcrumb" role="navigation">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index","Default")">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Thêm tin tức</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-md-6 col-sm-12 text-right">
                    <div class="dropdown">
                        <a class="btn btn-secondary dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                            January 2018
                        </a>
                        <div class="dropdown-menu dropdown-menu-right">
                            <a class="dropdown-item" href="#">Export List</a>
                            <a class="dropdown-item" href="#">Policies</a>
                            <a class="dropdown-item" href="#">View Assets</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Default Basic Forms Start -->
        <div class="pd-20 card-box mb-30">
            <div class="clearfix">
                <div class="pull-left">
                    <h4 class="text-blue h4">Thêm tin tức</h4>
                    <p class="mb-30">All bootstrap element classies</p>
                </div>
                <div class="pull-right">
                    <a href="#basic-form1" class="btn btn-primary btn-sm scroll-click" rel="content-y" data-toggle="collapse" role="button"></a>
                </div>
            </div>
            <form method="post">
                <div class="form-group row">
                    <label class="col-sm-12 col-md-2 col-form-label">Tiêu đề</label>
                    <div class="col-sm-12 col-md-10">
                        <input class="form-control" type="text" placeholder="" name="TieuDe" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-12 col-md-2 col-form-label">Mô tả ngắn</label>
                    <div class="col-sm-12 col-md-10">
                        <input class="form-control" placeholder="" type="search" name="MoTaNgan" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-12 col-md-2 col-form-label"> Mô tả</label>
                    <div class="col-sm-12 col-md-10">
                        <textarea class="form-control" name="MoTa" id="MoTa"></textarea>
                        <script type="text/javascript">
                            CKEDITOR.replace("MoTa");
                        </script>
                        <script>
                            $("#browse").click(function () {
                                var finder = new CKFinder();
                                finder.selectActionFunction = function (fileUrl) {
                                    $("#MoTa").val(fileUrl);
                                }
                                finder.popup();
                            });
                        </script>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-12 col-md-2 col-form-label">Ảnh</label>
                    <div class="col-sm-12 col-md-10 d-flex">
                        <input class="form-control" placeholder="" type="text" name="Anh" required id="Anh">
                        <input type="button" class="btn btn-success" id="upload-image" value="upload ảnh" required>
                        <script>
                            $("#upload-image").click(function () {
                                var finder = new CKFinder();
                                finder.selectActionFunction = function (fileUrl) {
                                    $("#Anh").val(fileUrl);
                                }
                                finder.popup();
                            });
                        </script>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-12 col-md-2 col-form-label">Chuyên mục</label>
                    <div class="col-sm-12 col-md-10">
                        @Html.DropDownList("MaCM", null, htmlAttributes: new { @class = "custom-select" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-12 col-md-2 col-form-label">Tác gia</label>
                    <div class="col-sm-12 col-md-10">
                        <input class="form-control" placeholder="" type="search" name="TacGia" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-12 col-md-2 col-form-label">Tác gia</label>
                    <div class="col-sm-12 col-md-10">
                        <input class="form-control" placeholder="" type="date" name="NgayDang" required>
                    </div>
                </div>
                <div class="btn-list">
                    <button type="submit" class="btn btn-success btn-lg btn-block">Thêm</button>
                    <a href="@Url.Action("Index","TinTucs")" class="btn btn-secondary btn-lg btn-block">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>
