@model IEnumerable<QuanLySach.Models.TinTuc>
@using QuanLySach.Models;
@{
    Layout = null;
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="section__title text-center">
                <h2 class="title__be--2">Tin tức <span class="color--theme">của chúng tôi</span></h2>
                <p>Tin tức sẽ đc cập nhập hàng ngày</p>
            </div>
        </div>
    </div>
    <div class="row mt--50">

        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4 col-sm-12">
                <div class="post__itam">
                    <div class="content">
                        <h3><a href="@Url.Action("BlogDetail","Blog" , new { ma = item.Ma })">@item.TieuDe</a></h3>
                        <p>@item.MoTaNgan</p>
                        <div class="post__time">
                            <span class="day">Dec 06, 18</span>
                            <div class="post-meta">
                                <ul>
                                    <li><a href="#"><i class="bi bi-love"></i>72</a></li>
                                    <li><a href="#"><i class="bi bi-chat-bubble"></i>27</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>