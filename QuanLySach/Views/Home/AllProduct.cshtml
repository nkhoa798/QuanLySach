@model IEnumerable<QuanLySach.Models.SanPham>
@using QuanLySach.Models;
@{
    Layout = null;
}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="section__title text-center">
                <h2 class="title__be--2">Tát cả <span class="color--theme">sản phẩm</span></h2>
                <p>Danh sách các sản phẩm có tại cửa hàng</p>
            </div>
        </div>
    </div>
    <div class="row mt--50">
        <div class="col-md-12 col-lg-12 col-sm-12">
            <div class="product__nav nav justify-content-center" role="tablist">
                <a class="nav-item nav-link active" data-toggle="tab" href="#nav-all" role="tab">ALL</a>
                @foreach (var item in ViewBag.LoaiSP)
                {
                    <a class="nav-item nav-link" data-toggle="tab" href="#nav-@item.Ma" role="tab">@item.Ten</a>
                }
            </div>
        </div>
    </div>
    <div class="tab__container mt--60">
        <!-- Start Single Tab Content -->
        <div class="row single__tab tab-pane fade show active" id="nav-all" role="tabpanel">
            <div class="product__indicator--4 arrows_style owl-carousel owl-theme">
                @{
                    int i = 0;
                    var product = Model.ToArray();
                    var d = product.Length / 2;
                }
                @while (i < product.Length / 2)
                {
                    <div class="single__product">
                        <!-- Start Single Product -->
                        <div class="col-lg-3 col-md-4 col-sm-6 col-12">
                            <div class="product product__style--3">
                                <div class="product__thumb">
                                    <a class="first__img" href="@Url.Action("SingleProduct","SinglePage" , new { ma = product[i].Ma })"><img src="@product[i].Anh" alt="product image"></a>
                                    <a class="second__img animation1" href="@Url.Action("SingleProduct","SinglePage" , new { ma = product[i].Ma })"><img src="@product[i].Anh" alt="product image"></a>
                                    <div class="hot__box">
                                        <span class="hot-label">@product[d].GiamGia</span>
                                    </div>
                                </div>
                                <div class="product__content content--center content--center">
                                    <h4><a href="@Url.Action("SingleProduct","SinglePage" , new { ma = product[i].Ma })">@product[i].Ten</a></h4>
                                    <ul class="prize d-flex">
                                        @{ decimal gia = (decimal)product[i].Gia;}
                                        <li>@gia.ToString("##,#") VND</li>
                                    </ul>
                                    <div class="action">
                                        <div class="actions_inner">
                                            <ul class="add_to_links">
                                                <li><a class="cart" href="@Url.Action("XemGioHang","GioHangs")"><i class="bi bi-shopping-bag4"></i></a></li>
                                                <li><a class="wishlist" href="@Url.Action("ThemGioHang","GioHangs" , new { masp = product[i].Ma , sl = 1})"><i class="bi bi-shopping-cart-full"></i></a></li>
                                                <li><a class="compare" href="@Url.Action("ThemWishList","wishlist" , new { masp = product[i].Ma})"><i class="bi bi-heart-beat"></i></a></li>
                                                <li><a  title="Quick View" class="quickview detail-link" href="@Url.Action("SingleProduct","SinglePage" , new { ma = product[i].Ma })"><i class="bi bi-search"></i></a></li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="product__hover--content">
                                        <ul class="rating d-flex">
                                            <li class="on"><i class="fa fa-star-o"></i></li>
                                            <li class="on"><i class="fa fa-star-o"></i></li>
                                            <li class="on"><i class="fa fa-star-o"></i></li>
                                            <li><i class="fa fa-star-o"></i></li>
                                            <li><i class="fa fa-star-o"></i></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Start Single Product -->
                        <!-- Start Single Product -->
                        <div class="col-lg-3 col-md-4 col-sm-6 col-12">
                            <div class="product product__style--3">
                                <div class="product__thumb">
                                    <a class="first__img" href="single-product.html"><img src="@product[d+i].Anh" alt="product image"></a>
                                    <a class="second__img animation1" href="single-product.html"><img src="@product[d+i].Anh" alt="product image"></a>
                                    <div class="hot__box">
                                        <span class="hot-label">@product[d + i].GiamGia</span>
                                    </div>
                                </div>
                                <div class="product__content content--center content--center">
                                    <h4><a href="@Url.Action("SingleProduct","SinglePage" , new { ma = product[d + i].Ma })l">@product[d + i].Ten</a></h4>
                                    <ul class="prize d-flex">
                                        @{ decimal gia1 = (decimal)product[d + i].Gia;}
                                        <li>@gia1.ToString("##,#") VND</li>
                                    </ul>
                                    <div class="action">
                                        <div class="actions_inner">
                                            <ul class="add_to_links">
                                                <li><a class="cart" href="@Url.Action("XemGioHang","GioHangs")"><i class="bi bi-shopping-bag4"></i></a></li>
                                                <li><a class="wishlist" href="@Url.Action("ThemGioHang","GioHangs" , new { masp = product[d+i].Ma , sl = 1})"><i class="bi bi-shopping-cart-full"></i></a></li>
                                                <li><a class="compare" href="@Url.Action("ThemWishList","wishlist" , new { masp = product[d+i].Ma})"><i class="bi bi-heart-beat"></i></a></li>
                                                <li><a title="Quick View" class="quickview modal-view detail-link" href="@Url.Action("SingleProduct","SinglePage" , new { ma = product[d+i].Ma  })"><i class="bi bi-search"></i></a></li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="product__hover--content">
                                        <ul class="rating d-flex">
                                            <li class="on"><i class="fa fa-star-o"></i></li>
                                            <li class="on"><i class="fa fa-star-o"></i></li>
                                            <li class="on"><i class="fa fa-star-o"></i></li>
                                            <li><i class="fa fa-star-o"></i></li>
                                            <li><i class="fa fa-star-o"></i></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Start Single Product -->
                    </div>
                    i++;
                }
            </div>
        </div>
        <!-- End Single Tab Content -->
        <!-- Start Single Tab Content -->
        @foreach (var item in ViewBag.LoaiSP)
        {
            <div class="row single__tab tab-pane fade" id="nav-@item.Ma" role="tabpanel">
                <div class="product__indicator--4 arrows_style owl-carousel owl-theme">
                    @foreach (var sp in Model)
                    {
                        if (sp.MaLoai == item.Ma)
                        {
                            <div class="single__product">
                                <!-- Start Single Product -->
                                <div class="col-lg-3 col-md-4 col-sm-6 col-12">
                                    <div class="product product__style--3">
                                        <div class="product__thumb">
                                            <a class="first__img" href="@Url.Action("IdProduct","Home",new { ma = sp.Ma })"><img src="@sp.Anh" alt="product image"></a>
                                            <a class="second__img animation1" href="@Url.Action("SingleProduct","SinglePage" , new { ma = sp.Ma })"><img src="@sp.Anh" alt="product image"></a>
                                            <div class="hot__box">
                                                <span class="hot-label">@sp.GiamGia</span>
                                            </div>
                                        </div>
                                        <div class="product__content content--center">
                                            <h4><a href="single-product.html">@sp.Ten</a></h4>
                                            <ul class="prize d-flex"
                                                 @{ decimal gia = (decimal)sp.Gia;}>
                                                <li>@gia.ToString("##,#") VND</li>
                                            </ul>
                                            <div class="action">
                                                <div class="actions_inner">
                                                    <ul class="add_to_links">
                                                        <li><a class="cart" href="@Url.Action("XemGioHang","GioHangs")"><i class="bi bi-shopping-bag4"></i></a></li>
                                                        <li><a class="wishlist" href="@Url.Action("ThemGioHang","GioHangs" , new { masp = item.Ma , sl = 1})"><i class="bi bi-shopping-cart-full"></i></a></li>
                                                        <li><a class="compare" href="@Url.Action("ThemWishList","wishlist" , new { masp = item.Ma})"><i class="bi bi-heart-beat"></i></a></li>
                                                        <li><a  title="Quick View" class="quickview modal-view detail-link" href="@Url.Action("SingleProduct","SinglePage" , new { ma = item.Ma })"><i class="bi bi-search"></i></a></li>
                                                    </ul>
                                                </div>
                                            </div>
                                            <div class="product__hover--content">
                                                <ul class="rating d-flex">
                                                    <li class="on"><i class="fa fa-star-o"></i></li>
                                                    <li class="on"><i class="fa fa-star-o"></i></li>
                                                    <li class="on"><i class="fa fa-star-o"></i></li>
                                                    <li><i class="fa fa-star-o"></i></li>
                                                    <li><i class="fa fa-star-o"></i></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        }
    </div>
</div>