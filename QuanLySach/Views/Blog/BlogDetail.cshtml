
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="ht__bradcaump__area bg-image--6" style="background-image:url(../Assets/images/banner/banner4.jpg)">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="bradcaump__inner text-center">
                    <h2 class="bradcaump-title">Chi tiết tin tức</h2>
                    <nav class="bradcaump-content">
                        <a class="breadcrumb_item" href="index.html">Trang chủ</a>
                        <span class="brd-separetor">/</span>
                        <span class="breadcrumb_item active">Chi tiết tin </span>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Bradcaump area -->
<div class="page-blog-details section-padding--lg bg--white">
    <div class="container">
        <div class="row">
            <div class="col-lg-9 col-12">
                <div class="blog-details content">
                    <article class="blog-post-details">
                        <div class="post-thumbnail">
                            <img src="@ViewBag.Anh" alt="blog images">
                        </div>
                        <div class="post_wrapper">
                            <div class="post_header">
                                <h2>@ViewBag.TieuDe</h2>
                                <div class="blog-date-categori">
                                    <ul>
                                        <li>@ViewBag.NgayDang</li>
                                        <li><a href="#" title="Posts by boighor" rel="author">@ViewBag.TacGia</a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="post_content">
                                 <p>@Html.Raw(ViewBag.MoTa)</p>
                            </div>
                            <ul class="blog_meta">
                                <li>Thẻ--<span>@ViewBag.Tag</span></li>
                            </ul>
                        </div>
                    </article>
                </div>
            </div>
            <div class="col-lg-3 col-12 md-mt-40 sm-mt-40">
                <div class="wn__sidebar">
                    <!-- Start Single Widget -->
                    <aside class="widget search_widget">
                        <h3 class="widget-title">Tìm kiếm</h3>
                        <form action="#">
                            <div class="form-input">
                                <input type="text" placeholder="Search...">
                                <button><i class="fa fa-search"></i></button>
                            </div>
                        </form>
                    </aside>
                    <!-- End Single Widget -->
                    <!-- Start Single Widget -->
                    <aside class="widget recent_widget">
                        <h3 class="widget-title">Tin tức</h3>
                        <div class="recent-posts">
                            <ul>
                                @foreach (var item in ViewBag.TinTuc)
                                {
                                    <li>
                                        <div class="post-wrapper d-flex">
                                            <div class="thumb">
                                                <a href="@Url.Action("BlogDetail","Blog" , new { ma = item.Ma })"><img src="@item.Anh" style="width:50px; height:40px ; object-fit:cover" alt="blog images"></a>
                                            </div>
                                            <div class="content">
                                                <h4><a href="@Url.Action("BlogDetail","Blog" , new { ma = item.Ma })" style="display: -webkit-box !important; -webkit-box-orient: vertical; -webkit-line-clamp:1; overflow: hidden; ">@item.TieuDe</a></h4>
                                                @{ DateTime time = DateTime.Parse(item.NgayDang.ToString());}
                                                <p>@time.ToString("yyyy-MM-dd")</p>
                                            </div>
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>
                    </aside>
                    <aside class="widget category_widget">
                        <h3 class="widget-title">Chuyên mục</h3>
                        <ul>
                            @foreach (var item in ViewBag.ChuyenDe) { 
                               <li><a href="@Url.Action("showBlog","Blog" , new { ma = item.Ma })">@item.Ten</a></li>
                            }
                            
                        </ul>
                    </aside>
                </div>
            </div>
        </div>
    </div>
</div>
